// Billing Service Database Schema
generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/billing-client"
}

datasource db {
  provider = "postgresql"
  url      = env("BILLING_SERVICE_DATABASE_URL")
}

enum BillStatus {
  PENDING
  PAID
  OVERDUE
}

model Bill {
  id        String     @id @default(uuid())
  amount    Decimal    @db.Decimal(10, 2)
  lateFee   Decimal    @default(0) @db.Decimal(10, 2)
  discount  Decimal    @default(0) @db.Decimal(10, 2)
  dueDate   DateTime
  status    BillStatus @default(PENDING)
  userId    String     // Reference to User service
  utilityId String     // Reference to Utility service
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([userId])
  @@index([utilityId])
  @@index([status])
  @@index([dueDate])
}

model Coupon {
  id         String   @id @default(uuid())
  code       String   @unique
  amount     Decimal  @db.Decimal(10, 2)
  type       String   // 'PERCENTAGE' or 'FIXED'
  expiryDate DateTime
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
