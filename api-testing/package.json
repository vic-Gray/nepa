{
  "name": "@nepa/api-testing-framework",
  "version": "1.0.0",
  "description": "Comprehensive API testing automation framework for NEPA platform",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit --watchAll=false",
    "test:integration": "jest tests/integration --watchAll=false",
    "test:e2e": "jest tests/e2e --watchAll=false",
    "test:performance": "jest tests/performance --watchAll=false",
    "test:security": "jest tests/security --watchAll=false",
    "test:contract": "jest tests/contract --watchAll=false",
    "test:all": "jest --coverage --watchAll=false",
    "test:ci": "jest --ci --coverage --watchAll=false --reporters=default --reporters=jest-junit",
    "test:load": "k6 run tests/load/",
    "test:api-health": "ts-node scripts/api-health-check.ts",
    "test:contract-verify": "ts-node scripts/verify-contracts.ts",
    "test:security-scan": "ts-node scripts/security-scan.ts",
    "test:generate-report": "ts-node scripts/generate-test-report.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts,.js --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "supertest": "^6.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "faker": "^6.6.6",
    "lodash": "^4.17.21",
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "mocha": "^10.2.0",
    "artillery": "^2.0.0",
    "k6": "^0.45.0",
    "pactum": "^3.6.0",
    "owasp-security-headers": "^1.1.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "allure-js-commons": "^2.6.0",
    "jest-allure": "^0.1.3",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "@jest/types": "^29.5.5",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.12",
    "@types/axios": "^0.14.0",
    "@types/lodash": "^4.14.200",
    "@types/chai": "^4.3.10",
    "@types/chai-http": "^4.2.0",
    "@types/mocha": "^10.0.4",
    "@types/uuid": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/faker": "^6.6.9",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.+(ts|tsx|js)", "**/?(*.)+(spec|test).+(ts|tsx|js)"],
    "transform": {"^.+\\.(ts|tsx)$": "ts-jest"},
    "collectCoverageFrom": ["src/**/*.{ts,tsx}", "!src/**/*.d.ts", "!src/types/**"],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "json"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "globalSetup": "<rootDir>/tests/globalSetup.ts",
    "globalTeardown": "<rootDir>/tests/globalTeardown.ts",
    "reporters": ["default", "jest-html-reporters", "jest-junit"],
    "testTimeout": 30000
  }
}
